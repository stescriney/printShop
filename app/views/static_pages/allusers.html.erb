<div class="mainCont">
    
    <h1>Registered Users</h1>
    
    
    
    <% if user_signed_in? && current_user.admin? %>
<% @users.each do |user| %>


    <div class="mainCont">
    
   <h1>User Id: <%= user.id %></h1>
   <h1>email: <%= user.email %></h1>
   <h1>Admin: <%= user.admin %></h1>
