<% if @cart.empty? %>
<p><b>You have not added any items yet</p>
<% end %>



<p id="notice"><%= notice %></p>

<div id="itemsContainer">
    <table id="customers">
        <% total = 0 %>
        <% @cart.each do |id, quantity| %>
        
        <% item = Item.find_by_id(id) %>
        
        <tr>
            <td>
                <div class="image">
                    <%= link_to (image_tag item.image_url, :style =>"height:40px"), item %>
                </div>
                
            </td>
            
            <td class="title"><%= link_to item.title, item %></td>
            <td><a href="/remove/<%= item.id %>" class="w3-button w3-black w3-section">Remove From Cart</a></td>
            <td>
                <a href="/reduce/<%= item.id %>" ></i><i class="fas fa-cart-arrow-down"></i></i></a>
                <a href="/increase/<%= item.id %>" ><i class="fas fa-cart-plus"></a></td>
            <td class="price"><%= number_to_currency(item.price, :unit =>"€") %></td>
            <td class="quantity"><%= quantity %></td>
            <td class="price"><%= number_to_currency(quantity * item.price, :unit =>"€") %></td>
            
        </tr>
        
        <tr>
            <% total += quantity * item.price %>
          </tr>
         <% end %>
         <tr>
             <td>
            Grand Total: <%= number_to_currency(total, :unit => "€") %>
            </td>
          </tr>
          
          
           <tr>
             <td>
            <a href="/items" class="w3-button w3-black w3-section">Continue Shopping</a> 
            </td>
             <td>
            <a href="/cart/clearcart" class= "w3-button w3-black w3-section">Empty Cart</a> 
            </td>
            <td><a href="/checkout" class="w3-button w3-black w3-section">Checkout</a></td>
          </tr>
           
    </table>
      </div>
