<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<table id="customers">
  <thead>
    <tr>
      <th>Order date</th>
      <th>User</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @orders.each do |order| %>
      <tr>
        <td class="w3-input w3-section w3-border"><%= order.order_date %></td>
        <td><%= order.user_id %></td>
        <td><%= order.status %></td>
        <td><%= link_to 'Show', order %></td>
        <% if current_user.admin %>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>


<br>
<% if user_signed_in? %>
  <% if current_user.admin %>
    <%= link_to 'New Order', new_order_path,:class => "w3-button w3-black w3-section" %>
  <% end %>
<% end %>
